{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/"
    },
    "browserSync": {
      "mode": "proxy",
      "whitelist": ["wp-admin/admin-ajax.php"],
      "blacklist": ["wp-admin/**"],
      "watch": [
        "{app,views}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "devUrl": "localhost/web/root/path"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": ["assets/scripts/vendor/*.js"]
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "styles/wrapper.styl",
          "vendor": "assets/styles/vendor/*.css",
          "uncss": true
        },
        "editor.css": "styles/wordpress/editor.styl",
        "admin.css": "styles/wordpress/admin/wrapper.styl",
        "login.css": "styles/wordpress/login/wrapper.styl"
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "assets": {
        "./": "fonts/**/*"
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "assets": {
        "./": "images/**/*"
      }
    }
  }
}
