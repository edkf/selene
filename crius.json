{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/"
    },
    "browserSync": {
      "mode": "server",
      "watch": [
        "{src,templates}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "devUrl": "localhost/web/root"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": "assets/scripts/vendor/*.js",
          "npm": []
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "styles/wrapper.styl",
          "vendor": "assets/styles/vendor/*.css",
          "npm": [],
          "uncss": true
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "assets": {
        "./": "fonts/**/*"
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "assets": {
        "./": "images/**/*"
      }
    }
  }
}
