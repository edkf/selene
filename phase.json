{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/"
    },
    "supportedBrowsers": ["last 2 versions", "opera 12", "IE 10"],
    "browserSync": {
      "files": [
        "{lib,templates}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "devUrl": "localhost/phase"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": "assets/styles/vendor/*.js",
          "npm": []
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "styles/wrapper.styl",
          "vendor": [
            "assets/styles/vendor/reset.css",
            "assets/styles/vendor/*.css"
          ],
          "npm": []
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "fonts/**/*"
        }
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "images/**/*"
        }
      }
    }
  }
}
