{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/",
      "bowerDirectory": "bower_components/",
      "bowerJson": "bower.json"
    },
    "supportedBrowsers": [
      "last 2 versions",
      "android 4",
      "opera 12"
    ],
    "browserSync": {
      "files": [
        "{lib,templates}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "whitelist": [],
      "blacklist": [],
      "devUrl": "localhost/phase"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": [
            "assets/scripts/vendor/*.js"
          ],
          "bower": []
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": ["styles/styl/wrapper.styl", "styles/scss/wrapper.scss"],
          "vendor": [
            "assets/styles/vendor/reset.css",
            "assets/styles/vendor/*.css"
          ],
          "bower": []
        }
      }
    }
  },
  "fonts": {
    "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
    "directory": "fonts",
    "simpleTask": true,
    "assets": {
      "/": {
        "files": [
          "fonts/**/*"
        ]
      }
    }
  },
  "images": {
    "pattern": "*.{jpg,png,gif}",
    "directory": "images",
    "simpleTask": true,
    "assets": {
      "/": {
        "files": [
          "images/**/*"
        ]
      }
    }
  }
}
