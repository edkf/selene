{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/",
      "bowerDirectory": "bower_components/",
      "bowerJson": "bower.json"
    },
    "supportedBrowsers": ["last 2 versions", "opera 12", "IE 10", "Safari >= 8"],
    "browserSync": {
      "files": [
        "{lib,templates}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "devUrl": "localhost:8888/chris"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": ["assets/scripts/vendor/*.js"],
          "bower": []
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "styles/styl/wrapper.styl",
          "vendor": [
            "assets/styles/vendor/reset.css",
            "assets/styles/vendor/*.css"
          ],
          "bower": []
        },
        "editor-style.css": {
          "files": "styles/styl/wordpress/editor.styl"
        },
        "admin.css": {
          "files": "styles/styl/wordpress/admin.styl"
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "fonts/**/*"
        }
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif}",
      "directory": "images",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "images/**/*"
        }
      }
    }
  }
}
